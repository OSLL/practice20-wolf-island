<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SignInFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_enter_nameUser"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="80dp"
        android:enabled="true"
        android:hint="@string/login"
        app:hintEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_enter_password"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:enabled="true"
        android:hint="@string/password"
        app:hintEnabled="true"
        app:layout_constraintEnd_toEndOf="@+id/et_enter_nameUser"
        app:layout_constraintStart_toStartOf="@+id/et_enter_nameUser"
        app:layout_constraintTop_toBottomOf="@+id/et_enter_nameUser">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_enter_enter"
        style="@style/btn_main_menu"
        android:layout_width="0dp"
        android:text="@string/sign_in"
        app:layout_constraintEnd_toEndOf="@+id/et_enter_password"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_enter_password"
        app:strokeColor="@color/design_default_color_primary"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="339dp" />


</androidx.constraintlayout.widget.ConstraintLayout>